@import '_mixins.styl'
@import '_normalize.styl'
@import '_typography.styl'
@import '_form.styl'
@import '../../node_modules/react-datepicker/dist/react-datepicker.css'
@import '_calendar_reskinning.styl'
body
    background-color offwhite
    font-family droid

.site-title
  font-family lobster
  text-align center
  font-weight 100
  font-size 13rem
  margin 2rem 0
  letter-spacing -1px
  text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  color blue
  a
    color blue
    text-decoration none
    &:focus
      outline 0

.rtl
    text-align right

.currency-cont
    font-size 1.5rem
    color textcolor
    line-height  2.6
    padding-right 1.2rem
    font-style italic

    .currency
        font-size 1.3rem
        position relative
        padding-left .5rem
        top -.1rem

.container
    clearfix
    width 100%
    max-width 100rem
    padding 0 2rem
    box-sizing border-box
    margin 0 auto

    .main-content
        background-color #fff
        width 100%
        border-radius .4rem

.button
    padding 1rem 1.5rem
    background-color blue
    color white
    font-family droid
    font-size 1.3rem
    border-radius .4rem
    text-decoration none
    border none

    &.disable
        background-color #a4aaaf !important
        cursor default

 .table-row, .table-header
    background-color #353940
    border-radius .4rem
    display inline-block
    width 100%

    .th, .td
        display inline-block
        vertical-align top
        padding 1rem
        font-family droid
        font-size 1.5rem
        line-height 1.5
        color #fff

.table-row
    background-color transparent
    position relative

.cls-btn
    text-decoration none
    display inline-block
    vertical-align center
    background-color blue
    color #fff
    font-family droid
    font-size 1rem
    line-height 1.8
    text-align center
    border-radius 100rem
    width 1.8rem
    height 1.8rem

.view-link
    text-decoration none
    color blue
    font-size 1.4rem
    padding-bottom .1rem
    border-bottom .14rem solid blue

.hr
    width 100%
    height .1rem
    background-color #000
    margin .2rem 0
    display inline-block

@import '_responsive.styl'
