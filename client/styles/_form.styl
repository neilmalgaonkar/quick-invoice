form
    width 100%

.field-grp
    width 100%;
    padding 1.2rem 0.8rem;

    .field-label
        display inline-block
        width 100%
        font-family droid
        font-size 1.4rem
        letter-spacing .07rem
        color textcolor
        margin-bottom 1.3rem
        padding-left .7rem

.react-datepicker__input-container
    width 100%


.input-field-cont
    display inline-block
    width 100%
    border .25rem solid #eee
    border-radius .4rem
    position relative
    .input-label
        position absolute
        line-height 2.2rem
        font-size 1rem
        font-family droid
        background-color #e6e6e6
        padding 1rem 1.2rem
        color textcolor
        text-align center
        top -.1rem
        bottom -.1rem
        box-sizing border-box
    .input
        border none

    &.left
        .input-label
            custom-border-radius .4rem 0 0 .4rem
            left -.1rem
    &.right
        .input-label
            custom-border-radius 0 .4rem .4rem 0
            right -.1rem
        .input
            text-align right

.invoice-no-field-cont
    padding-left 3rem
    .input-label
        width 3.4rem

.discount-field-cont
.tax-field-cont
    padding-right 3rem
    .input-label
        width 3.4rem

.entry-quantity-cont-field
    padding-right 3.4rem
    .input-label
        width 3.8rem

.entry-rate-cont-field
    padding-right 3.2rem
    .input-label
        width 3.8rem
        font-size .9rem
        color textcolor

input[type=text]
input[type=date]
input[type=email]
input[type=number]
    width 100%
    padding 1rem 1.1rem
    font-size 1.3rem
    letter-spacing 0.07rem
    font-family droid
    border-radius .4rem
    outline none
    border .25rem solid #eee
    color textcolor
    box-sizing border-box
    line-height 2rem

input[type=date]
    padding 0.75rem 1.1rem

input[type=number]::-webkit-inner-spin-button
    -webkit-appearance none

textarea
    width 100%
    padding 1rem 1.1rem
    color textcolor
    border .25rem solid #eee
    font-size 1.3rem
    line-height 2rem
    height 12rem
    letter-spacing .07rem

