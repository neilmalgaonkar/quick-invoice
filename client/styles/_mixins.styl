.clearfix()
    zoom 1
    &:before
    &:after
        content ""
        display table
    &:after
        clear both

.border-radius(radius)
    border-radius radius
    -moz-border-radius radius
    -webkit-border-radius radius

.placeholder(color)
    &::-webkit-input-placeholder
        color color

    &:-moz-placeholder
        color color

    &::-moz-placeholder
        color color

    &:-ms-input-placeholder
        color color
