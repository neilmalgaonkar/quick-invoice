.react-datepicker
    &__current-month
        font-size 1.5rem
        line-height 1.3rem
        margin-bottom 1rem
    &__day-names
        margin-top .6rem
        margin-bottom .5rem

    &__navigation
        top 1.1rem
        &--previous
            left .5rem
        &--next
            right .5rem

    &__day-name
    &__day
        width 4rem
        font-size 1.5rem
        line-height 2rem
        font-family droid
    &__day
        font-size 1.5rem
        width 4rem
        line-height 4rem

@media (max-width: 767px)
    .react-datepicker
        &__current-month
            font-size: 1.2rem;
            line-height: 1.0rem;
            margin-bottom: .8rem;
        &__day-names
            margin-top .3rem
            margin-bottom .3rem

        &__navigation
            top .9rem
            &--previous
                left .5rem
            &--next
                right .5rem

        &__day-name
        &__day
            width 3rem
            font-size 1.3rem
            line-height 1.7rem
            font-family droid
        &__day
            font-size 1.3rem
            width 3rem
            line-height 3rem
