@import '../../styles/_typography.styl'
@import '../../styles/_mixins.styl'

.entries-table
    width 100%;
    margin 1.5rem 0;
    display inline-block;

    .td
        padding-left 0

    .col-item
        width 55%

    .col-quantity, .col-rate
        width 14%

    .col-amount
        width 17%

    .amount
        display inline-block
        font-size 1.5rem
        padding 1rem
        line-height 1.5
        font-family droid
        color textcolor

    .entries
        margin-bottom 1.3rem
        &.hide-cls-btn
            .cls-btn
                display none

        .currency-cont
            text-align right
            padding-right 2.6rem

    .table-row
        &.dragging
            .row-view-cont
                background-color #0079bf
                border-radius(.2rem)
            .row-view
                opacity 0

        .row-view-cont
            margin-top .7rem
            margin-bottom .7rem

    .row-view
        .field-label
            display none
        .td
            padding-top 0.3rem
            padding-bottom 0.3rem


    .responsive-table-header
        display none

    .add-item
        float right

    .cls-btn
        position absolute
        right .2rem
        top 50%
        margin-top -1.1rem

    .item-description-cont
        position relative
        padding-left 2rem

        .dnd-marker-cont
            position absolute
            width 2rem
            left 0
            height 4.4rem
            cursor move

            .dnd-marker
                position relative
                width .3rem
                height .3rem
                border-radius(100%)
                background-color #444
                top 50%
                left 50%
                translateXY(-50%, -50%)

            .up-dot
            .bottom-dot
                position absolute
                background-color #444
                width .3rem
                height .3rem
                border-radius(100%)

            .up-dot
                margin-top -.7rem

            .bottom-dot
                margin-top .7rem
.entries-cont
    clearfix()

.invoice-amount-info
    float right
    width 100%;
    max-width 32rem

    .col1, .col2
        width 60%
        display inline-block
        vertical-align top
        padding 0 .8rem
        text-align right

    .col1
        width 40%

    .table-row
        margin-bottom 1.2rem

    label
        font-size 1.5rem
        color textcolor
        line-height  2.6
        padding-right 1.2rem

@media (max-width: 767px)
    .invoice-entries
        margin-top .5rem
    .entries-table
        margin-top 0
        .cls-btn
            top 2rem
            right 1.4rem
        .entries
            margin-top .5rem

        .row-view
            .field-label
                display block

        .col-item
            width 100%

        .col-quantity
        .col-rate
            width 50%

        .col-amount
            width 100%
            .currency-cont
                background-color #f5f5f5

        .table-header
                display none
        .responsive-table-header
            display block

            h1
                font-size 2rem
                color #000
                margin 0 0 .8rem

        .entry-item-cont
            display inline-block
            width 100%
            box-sizing border-box

        .item-field-row
            width 100%
            display inline-block
            padding .8rem 0

        .item-description-cont
            padding-left 0
            .dnd-marker-cont
                display none

        .item-field-col
            display inline-block
            width 35%
            box-sizing border-box
            padding 0 .4rem
            &:last-child
                width 30%

            .currency-cont
                padding-right .5rem

@media (max-width: 480px)
    .entries-table
        .item-field-col
            display inline-block
            width 100%
            padding-bottom 1.6rem
            &:last-child
                .field-label
                    text-align right
                width 100%
                padding-bottom 0
            .currency-cont
                background-color #e6e6e6
                padding-right .8rem

    .invoice-amount-info
        max-width 100%
        .col1
        .col2
            width 100%
            text-align right
            padding 0
        .col2
            &.bg
                background-color #e6e6e6
        .table-row
            margin-bottom .1rem
